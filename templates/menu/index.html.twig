<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Byte to Eat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Welcome to Byte to Eat!</h1>
        <div class="flash-messages">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {{ form_start(form, {'attr': {'class': 'form-container'}}) }}
        <div class="form-group">
            {{ form_row(form.order, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.create_order, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.starter, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.main_course, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dessert, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.place_order, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
        <div class="container text-center">
            <h3>Menu</h3>
            <div class="row">
                <div class="col">
                    <h5>Starters</h5>
                    <ul>
                        <li>Cream of Mushroom Soup</li>
                        <li>Seafood Chowder</li>
                        <li>Roasted Beetroot and Goat's Cheese Salad</li>
                        <li>Quinoa Salad with Mixed Vegetables</li>
                        <li>Prawn Cocktail</li>
                        <li>Calamari</li>
                        <li>Deep Fried Camembert</li>
                        <li>Chicken Satay</li>
                    </ul>
                </div>
                <div class="col">
                    <h5>Mains</h5>
                    <ul>
                        <li>Beef Burger</li>
                        <li>Cheese Burger</li>
                        <li>Beyond Meat Vegan Burger</li>
                        <li>Fish and Chips</li>
                        <li>Grilled Salmon with Dill Sauce</li>
                        <li>Grilled Ribeye Steak</li>
                        <li>Roasted Chicken with Herbs</li>
                        <li>Mushroom Risotto</li>
                        <li>Vegetable Lasagne</li>
                        <li>Lentil and Spinach Curry</li>
                    </ul>
                </div>
                <div class="col">
                    <h5>Desserts</h5>
                    <ul>
                        <li>Sticky Toffee Pudding</li>
                        <li>Rhubarb Crumble and Custard</li>
                        <li>Vanilla Ice Cream</li>
                        <li>Cheese and Biscuits</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/form-behaviour.js"></script>
</body>
</html>
