<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Byte to Eat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Welcome to Byte to Eat!</h1>
        {% for message in app.flashes('success') %}
            <div class="flash-message">
                {{ message }}
                <button type="button" class="close" aria-label="Close" onclick="this.parentElement.style.display='none';">&times;</button>
            </div>
        {% endfor %}
        {{ form_start(form, {'attr': {'class': 'form-container'}}) }}
        <div class="form-group">
            {{ form_row(form.order, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.create_order, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.starter, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.main_course, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dessert, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.place_order, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
    <script src="/js/form-behaviour.js"></script>
</body>
</html>
